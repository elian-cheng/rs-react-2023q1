{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "types": ["vite/client", "cypress", "vitest/globals", "@testing-library/jest-dom"],
    "jsx": "react-jsx"
  },
  "ts-node": {
    "esm": true,
    "transpile-only": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src", "./setupTest.ts", "server.ts"],
  "exclude": ["vite.config.ts", "cypress.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
